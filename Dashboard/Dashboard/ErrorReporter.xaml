<UserControl x:Class="Dashboard.ErrorReporter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dashboard"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
    <Grid Background="SteelBlue" Margin="0,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button  Name="ErrorButton" Content="Error Button" Margin= "10" Click="ErrorButton_Click" Grid.Row="2"/>

        <Button Name="ErrorRemoval" Content="Remove Error" Margin="10" Click="ErrorRemoval_Click" Grid.Column="2" Grid.Row="2"/>

        <TextBox Name="ErrorTransporter" Text="Error Transporter" Margin="10" Grid.Row="2" Grid.Column="1"/>

        <Ellipse Name="Light1" Fill="Tomato" Height="30" Stroke="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Grid.Column="2"/>

        <Ellipse Name="Light2" Fill="Tomato" Height="30" Stroke="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Grid.Column="0" />

        <ListBox Name="ErrorBox" ItemsSource="{Binding}" Margin="10" Grid.Row="1" Grid.ColumnSpan="3"/>

        <TextBlock FontStyle="Oblique" FontSize="30" Text="ERROR" Grid.RowSpan="2" Grid.Column="1" HorizontalAlignment="Center"/>

    </Grid>
</UserControl>