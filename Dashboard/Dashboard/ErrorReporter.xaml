<UserControl x:Class="Dashboard.ErrorReporter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dashboard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid RenderTransformOrigin="0.496,0.525">
        <Label FontStyle="Oblique" FontSize="30"  Content="ERROR" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,209,0,0" Width="109"/>

        <Ellipse Name="Light1" Fill="Tomato" HorizontalAlignment="Left" Height="23" Margin="15,220,0,0" Stroke="Black" VerticalAlignment="Top" Width="23"/>

        <Ellipse Name="Light2" Fill="Tomato" HorizontalAlignment="Left" Height="23" Margin="152,220,0,0" Stroke="Black" VerticalAlignment="Top" Width="23"/>

        <ListBox Name="ErrorBox" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="183" Margin="10,257,0,0" VerticalAlignment="Top" Width="165"/>

        <Button Name="ErrorButton" Content="Error Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="206,394,0,0" Click="ErrorButton_Click"/>

        <TextBox Name="ErrorTransporter" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Error Transporter" VerticalAlignment="Top" Width="176" Margin="206,366,0,0"/>
        
        <Button Name="ErrorRemoval" Content="Remove Error" HorizontalAlignment="Left" Margin="307,394,0,0" VerticalAlignment="Top" Width="75" Click="ErrorRemoval_Click"/>


    </Grid>
</UserControl>