<UserControl x:Class="Dashboard.Console"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dashboard"
             mc:Ignorable="d" d:DesignHeight="250" d:DesignWidth="300">

    <Grid Background="DarkGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleBox" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Console" Grid.Row="0"/>
        <TextBox x:Name="ConsoleBox" BorderThickness="2" BorderBrush="Black" Margin="10" Grid.Row="1" Text="" TextChanged="ConsoleBox_TextChanged"/>
        <Button x:Name="ConsoleClear" Content="Clear Console" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Click="ConsoleClear_Click"/>

    </Grid>
</UserControl>